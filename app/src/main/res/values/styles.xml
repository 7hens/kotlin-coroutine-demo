<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TouchEventTest" />

    <style name="TouchEventTest.Parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TouchEventTest.Grid">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TouchEventTest.Event" parent="TouchEventTest.Grid">
        <item name="android:layout_weight">4</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="TouchEventTest.Action" parent="TouchEventTest.Grid">
        <item name="android:layout_weight">3</item>
        <item name="android:textColor">@color/sel_touchable</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
</resources>
